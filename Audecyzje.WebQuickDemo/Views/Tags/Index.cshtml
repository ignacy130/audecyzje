@model IEnumerable<Audecyzje.WebQuickDemo.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<h2>Tagi</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Utwórz nowy tag</a>
</p>
<a class="btn btn-primary" asp-action="RecreateTags">Przeskanuj wszystkie tagi na nowo</a>
@*<a class="btn btn-danger pull-right" asp-action="ClearAllTagRelations">Usuń wszystkie tagi i relacje</a>*@
<h4>
    UWAGA - przerabianie całości będzie chwilę trwać (tak ze 3 sekundy per tag ) - poczekaj cierpliwie albo rób pojedynczo ; )
</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegExp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkedDecisionsCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TagName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegExp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkedDecisionsCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Usuń</a> |
                    <a asp-action="RecreateSingleTag" class="btn btn-success" asp-route-id="@item.ID">Przeskanuj na nowo</a>
                </td>
            </tr>
        }
    </tbody>
</table>
